                android:name=".ui.reservation.AddRecordActivity"
                android:label="@string/reser_create"
                android:uiOptions="splitActionBarWhenNarrow"/>
        <activity
                android:name=".ui.person.PersonAddActivity"
                android:label="@string/person_add"/>
